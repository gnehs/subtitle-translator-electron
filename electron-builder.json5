/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  "appId": "net.gnehs.subtitle-translator-electron",
  "productName": "Subtitle Translator",
  "asar": true,
  "copyright": "Copyright Â© pancake.tw",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "mac": {
    "artifactName": "subtitle-translator_${version}.${ext}",
    "target": {
      "target": 'dmg',
      "arch": "universal"
    },
  },
  "win": {
    "icon": "build/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "subtitle-translator_${version}.${ext}"
  },
  "nsis": {
    "oneClick": true,
    "perMachine": false,
    "deleteAppDataOnUninstall": false
  },
  "linux":{
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      }
    ],
  }
}